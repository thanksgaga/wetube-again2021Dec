extends base

block content 
    
    if errorMessage 
        span=errorMessage 
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required, unique)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Log in")
        br
        a(href="/users/github/start") Github Login &rarr;

    
    hr
    div 
        span Don't have an account?
        div
            a(href="/join") Create one now &rarr;